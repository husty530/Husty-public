<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <Product>$(AssemblyName)</Product>
    <Company>$(Authors)</Company>
    <Authors>Takumi Yamashita</Authors>
    <Description>Lawicel CANUSB adapter.
It supports native DLL and VCP mode.</Description>
    <Version>2.1.0</Version>
    <ImplicitUsings>enable</ImplicitUsings>
    <PackageProjectUrl>https://github.com/husty530/Husty-public/tree/master/Lib/cs/Husty.Lawicel</PackageProjectUrl>
    <RepositoryUrl>https://github.com/husty530/Husty-public</RepositoryUrl>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageIcon>icon.png</PackageIcon>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\..\icon.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\..\..\LICENSE">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.IO.Ports" Version="7.0.0" />
  </ItemGroup>

</Project>
